<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="#eeeeee"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/comp"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:id="@+id/textView8"
            android:layout_width="102dp"
            android:layout_height="18dp"
            android:background="@drawable/orange"
            android:layout_marginBottom="20dp"
            android:text="Contact Us"
            android:textColor="#000000"
            android:textSize="15sp" />


        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#bbbbbb"
            android:elevation="4dp"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/titleaddress"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_alignStart="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:autoLink="map"
                android:text="@string/address"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textColorLink="#3322ff"
                />

        </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#bbbbbb"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:gravity="center"
                    android:text="@string/titlephone"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:autoLink="phone"
                    android:text="@string/phone"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textColorLink="#3322ff"/>


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#bbbbbb"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titleemail"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginStart="33dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_below="@+id/textView7"
                    android:autoLink="email"
                    android:textColorLink="#3322ff"/>


            </RelativeLayout>


        </android.support.v7.widget.CardView>

</LinearLayout>
    </ScrollView>